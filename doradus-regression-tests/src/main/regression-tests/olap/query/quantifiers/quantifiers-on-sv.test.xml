<!--
Doradus Data Model and Query Language -v2.1
4.14.3 Quantifiers on SV Scalar Fields
-->
<TEST>
<CONNECT/>
<disable-output/>
<DELETE path="_applications/Application/ApplicationKey"/>
<IMPORT>quantifiers-on-sv.defs.xml</IMPORT>
<DEFINE name="response.format" value="xml|json"/>
<enable-output/>

<FOR index="i" from="1" to="2">
    <IF.EQ arg1="${i}" arg2="1">
        <echo>~~~~~~~~~~~~~~</echo>
        <echo>~ XML format ~</echo>
        <echo>~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications" xml="${schema.xml}"/>
        <POST path="Application/shard" xml="${data.xml}"/>
        <enable-output/>
        <POST path="Application/_shards/shard" />
    </IF.EQ>
    <IF.EQ arg1="${i}" arg2="2">
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo>~ JSON format ~</echo>
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications" json="${schema.json}"/>
        <POST path="Application/shard" json="${data.json}"/>
        <enable-output/>
        <POST path="Application/_shards/shard" />
    </IF.EQ>

    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~ Table of Content ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <QUERY path="Application/Table" q="*" f="_all" shards="shard"/>
        
    <echo>~~~~~~~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~ Test for Quantifies on SV ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <QUERY path="Application/Table" q="ANY(SV) = abrakadabara" shards="shard"/>
    <QUERY path="Application/Table" q="ANY(SV) = Confidential" shards="shard"/>
    <QUERY path="Application/Table" q="ANY(SV) = (*Confidential, *Secret)" shards="shard"/>

    <QUERY path="Application/Table" q="ALL(SV) = abrakadabara" shards="shard"/>
    <QUERY path="Application/Table" q="ALL(SV) = Confidential" shards="shard"/>
    <QUERY path="Application/Table" q="ALL(SV) = (Confidential, *Secret*)" shards="shard"/>

    <QUERY path="Application/Table" q="NONE(SV) = abrakadabara" shards="shard"/>
    <QUERY path="Application/Table" q="NONE(SV) = Confidential" shards="shard"/>
    <QUERY path="Application/Table" q="NONE(SV) = (Confidential, *Secret*)" shards="shard"/>

    <DELETE path="_applications/Application/ApplicationKey"/>
</FOR>

<DISCONNECT />
</TEST>