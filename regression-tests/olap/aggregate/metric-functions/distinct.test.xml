<!--
Doradus Data Model and Query Language -v2.1
6.3.1 Metric Functions
-->
<TEST>
<CONNECT/>
<disable-output/>
<DELETE path="_applications/Application/ApplicationKey"/>
<IMPORT>distinct.defs.xml</IMPORT>
<DEFINE name="response.format" value="xml|json"/>
<enable-output/>

<FOR index="i" from="1" to="2">
    <IF.EQ arg1="${i}" arg2="1">
        <echo>~~~~~~~~~~~~~~</echo>
        <echo>~ XML format ~</echo>
        <echo>~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications" xml="${schema.xml}"/>
        <POST path="Application/shard" xml="${data.xml}"/>
        <enable-output/>
        <POST path="Application/_shards/shard" />
    </IF.EQ>
    <IF.EQ arg1="${i}" arg2="2">
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo>~ JSON format ~</echo>
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications" json="${schema.json}"/>
        <POST path="Application/shard" json="${data.json}"/>
        <enable-output/>
        <POST path="Application/_shards/shard" />
    </IF.EQ>

    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~ Table of Content ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <QUERY path="Application/Table" q="*" f="_all" shards="shard"/>
        
    <echo>~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~   Test for Aggregates: COUNT ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~~~~~~~~~~~</echo>
    <echo>~ INTEGER ~</echo>
    <echo>~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Table" m="DISTINCT(People)" f="Country" shards="shard" />
    <AGGREGATE path="Application/Table" m="DISTINCT(People)" shards="shard" />
    <AGGREGATE path="Application/Table" m="DISTINCT(*)" shards="shard" />

    <echo>~~~~~~~~~~~~~</echo>
    <echo>~ TIMESTAMP ~</echo>
    <echo>~~~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Table" m="DISTINCT(CreateDate)" f="Country" shards="shard"/>
    <AGGREGATE path="Application/Table" m="DISTINCT(CreateDate)" shards="shard"/>

    <echo>~~~~~~~~~~~~~</echo>
    <echo>~ STRING SV ~</echo>
    <echo>~~~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Table" m="DISTINCT(City)" f="Country" shards="shard" />
    <AGGREGATE path="Application/Table" m="DISTINCT(Country)" shards="shard" />

    <echo>~~~~~~~~~~~~~</echo>
    <echo>~ STRING MV ~</echo>
    <echo>~~~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Table" m="DISTINCT(MV)" f="Country" shards="shard" />
    <AGGREGATE path="Application/Table" m="DISTINCT(MV)" shards="shard" />

    <DELETE path="_applications/Application/ApplicationKey"/>
</FOR>

<DISCONNECT />
</TEST>