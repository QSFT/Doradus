                </doc>
                <doc _ID="1006" _table="Table">
                    <field name="Title">Title 6</field>
                </doc>
                <doc _ID="1007" _table="Table">
                    <field name="Title">Title 7</field>
                    <field name="Int">
			<add>
			    <value>-33</value>
			    <value>561</value>
			    <value>100000</value>
			</add>
		    </field>
