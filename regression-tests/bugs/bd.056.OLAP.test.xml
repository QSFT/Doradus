    <XML>
        <application name="Application">
            <key>ApplicationKey</key>
            <options>
                <option name="StorageService">OLAPService</option>
            </options>
            <tables>
                <table name="Table">
                    <fields>
                        <field name="Title" type="TEXT"/>
