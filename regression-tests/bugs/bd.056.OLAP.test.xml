			<add>
			    <value>8E2</value>
			    <value>-5E13</value>
			    <value>0.0077</value>
			</add>
		    </field>
                </doc>
            </docs>
        </batch>
    </XML>
    </POST>

    <enable-output/>
    <POST path="Application/_shards/shard"/>

    <QUERY path="Application/Table" q="*" shards="shard"/>

